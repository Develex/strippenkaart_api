<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Strippenkaart{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {#    <link rel="stylesheet" href="{{ absolute_url(asset('build/base.css')) }}"/> #}
    {{ encore_entry_link_tags('Bulma') }}
    {{ encore_entry_link_tags('style') }}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>

<nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <img src="{{ asset("./images/logo-trans.png") }}" width="160">

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item is-size-1-touch" href="{{ path('dashboard') }}">Home</a>
            <a class="navbar-item is-size-1-touch" href="{{ path('strippenkaart') }}">Mijn Strippenkaart</a>
            <a class="navbar-item is-size-1-touch" href="{{ path('scan') }}">Verwerk strippenkaart</a>
            <a class="navbar-item is-size-1-touch">Jobs</a>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons is-centered">
                    {% if user is not defined or user is null %}
                    <a class="button is-primary register is-size-3-touch">
                        <strong>Registreer</strong>
                    </a>
                    <a class="button is-light login is-size-3-touch">Log in</a>
                    {% else %}
                    <a class="button is-warning logout">
                        <strong>Log uit</strong>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</nav>

{# Page Content #}
{% block body %}{% endblock %}

<div class="modal" id="login-modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <form class="box">
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input is-link" type="email" placeholder="">
                </div>
            </div>
            <div class="field">
                <label class="label">Wachtwoord</label>
                <div class="control">
                    <input class="input is-link" type="password" placeholder="********">
                </div>
            </div>
            <button class="button" type="submit">Log in</button>
        </form>
    </div>
    <button class="modal-close is-large" aria-label="close">x</button>
</div>
<div class="modal" id="register-modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <form class="box">
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input is-link" type="email" placeholder="">
                </div>
            </div>
            <div class="field">
                <label class="label">Wachtwoord</label>
                <div class="control">
                    <input class="input is-link" type="password" placeholder="********">
                </div>
            </div>
            <div class="field">
                <label class="label">Herhaal wachtwoord</label>
                <div class="control">
                    <input class="input is-link" type="password" placeholder="********">
                </div>
            </div>
            <button class="button" type="submit">Registreer</button>
        </form>
    </div>
    <button class="modal-close is-large" aria-label="close">x</button>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
        crossorigin="anonymous"></script>
<script rel="script" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://kingkode.com/datatables.editor.lite/js/altEditor/dataTables.altEditor.free.js"></script>
{{ encore_entry_script_tags("qrcodegen") }}

<script>
    $(document).ready(function () {
        $(".navbar-burger").click(function () {
            $(".navbar-burger").toggleClass("is-active");
            $(".navbar-menu").toggleClass("is-active");
        });

        $("#login-modal .modal-close, .login,#login-modal .modal-background").click(function () {
            $("#login-modal").toggleClass("is-active");
        });

        $("#register-modal .modal-close, .register,#register-modal .modal-background").click(function () {
            $("#register-modal").toggleClass("is-active");
        });


    });
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
